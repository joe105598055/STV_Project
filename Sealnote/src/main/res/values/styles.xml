<?xml version="1.0" encoding="utf-8"?>

<!--
    Styles
-->

<resources>

    <!-- Base activity theme. -->
    <style name="Sealnote.Theme.Main" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Sealnote.Theme.Main.ActionBar</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_selector</item>
        <item name="android:actionOverflowButtonStyle">@style/Sealnote.Theme.Main.ActionBar.Overflow</item>
    </style>

    <style name="Sealnote.Theme.Main.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_background</item>
        <item name="android:titleTextStyle">@style/Sealnote.Theme.Main.ActionBar.Title</item>
        <item name="android:icon">@drawable/ic_home</item>
    </style>

    <style name="Sealnote.Theme.Main.ActionBar.Title" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Sealnote.Theme.Main.ActionBar.Overflow" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_core_overflow</item>
    </style>

    <!-- Sealnote Activity Theme -->
    <style name="Sealnote.Theme.Sealnote" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Sealnote.Theme.Sealnote.ActionBar</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_selector</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionOverflowButtonStyle">@style/Sealnote.Theme.Main.ActionBar.Overflow</item>
    </style>

    <style name="Sealnote.Theme.Sealnote.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_background</item>
        <item name="android:titleTextStyle">@style/Sealnote.Theme.Main.ActionBar.Title</item>
        <item name="android:icon">@drawable/ic_home</item>
    </style>

    <!-- Note activity theme. -->
    <style name="Sealnote.Theme.Note" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Sealnote.Theme.Note.ActionBar</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_selector</item>
        <item name="android:actionOverflowButtonStyle">@style/Sealnote.Theme.Main.ActionBar.Overflow</item>
        <item name="android:actionMenuTextColor">#bbffffff</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="Sealnote.Theme.Note.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#66000000</item>
        <item name="android:icon">@drawable/ic_home</item>
    </style>

    <!-- Card styles -->
    <style name="card.content_outer_layout">
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="list_card">
        <!-- For reducing the default padding. use itemmargin -->
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="PasswordLoginButton">
        <item name="android:background">@drawable/button_password_login</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:paddingTop">@dimen/password_activity_button_vertical_padding</item>
        <item name="android:paddingRight">@dimen/password_activity_button_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/password_activity_button_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/password_activity_button_horizontal_padding</item>
    </style>

    <style name="CreateNoteButton">
        <item name="android:background">@drawable/button_create_note</item>
        <item name="android:paddingRight">25dip</item>
        <item name="android:paddingLeft">25dip</item>
        <item name="android:textColor">@drawable/button_text_color_selector</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>


    <!-- Simple List View Item -->
    <style name="Sealnote.Theme.Main.SimpleListView" parent="android:Widget.Holo.Light.ListView">
        <item name="android:listSelector">@drawable/simple_list_view_item_background</item>
        <item name="android:divider">@drawable/simple_list_view_divider</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <!-- Note Content -->

    <style name="NoteContentCard">
        <item name="android:paddingTop">@dimen/nc_card_vertical_spacing</item>
        <item name="android:paddingRight">@dimen/nc_card_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/nc_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/nc_card_horizontal_padding</item>
        <item name="android:background">@drawable/note_type_card</item>
    </style>

    <style name="NoteContentCard_EditText">
        <item name="android:textSize">@dimen/nc_card_font_size</item>
        <item name="android:textColor">@color/note_foreground</item>
        <item name="android:textColorHint">@color/note_hint_foreground</item>
        <item name="android:singleLine">true</item>
        <item name="android:typeface">monospace</item>
    </style>

</resources>
