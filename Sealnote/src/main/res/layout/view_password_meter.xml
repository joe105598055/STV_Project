<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
        >
    <EditText
            android:id="@+id/password_meter_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:password="true"
            android:inputType="textPassword"
            android:imeOptions="actionGo"
            />

    <LinearLayout
            android:id="@+id/password_meter_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/password_meter_input"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:padding="0dp"
            >

        <ProgressBar
                android:id="@+id/password_meter_progress"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                style="?android:progressBarStyleHorizontal"
                android:progressDrawable="@drawable/passwordmeter_default"
                />

        <TextView
                android:id="@+id/password_meter_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:gravity="right"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-condensed"
                android:textSize="14sp"
                android:layout_margin="0dp"
                android:padding="0dp"
                />

    </LinearLayout>
</merge>
